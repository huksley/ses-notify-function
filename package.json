{
  "name": "ses-notify",
  "description": "SES Notify",
  "version": "0.1.0",
  "main": "src/notify.ts",
  "license": "MIT",
  "engines": {
    "node": ">=16 <20.0.0"
  },
  "dependencies": {
    "assert": "^2.0.0",
    "aws-lambda": "^0.1.2",
    "aws-sdk": "^2.497.0",
    "cross-env": "^5.2.0",
    "dotenv": "^8.0.0",
    "mailparser": "^3.2.0",
    "mime": "^2.4.3",
    "moment": "^2.24.0",
    "node-fetch": "^2.3.7",
    "nodemailer": "^6.6.1",
    "ramda": "^0.26.1",
    "source-map-support": "^0.5.12",
    "tslib": "^2.4.0",
    "uuid": "^3.3.3",
    "winston": "^3"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.26",
    "@types/dotenv": "^6.1.1",
    "@types/form-data": "^2.2.1",
    "@types/mailparser": "^2.4.0",
    "@types/mime": "^2.0.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.13.5",
    "@types/node-fetch": "^2.3.3",
    "@types/nodemailer": "^6.4.4",
    "@types/ramda": "^0.26.18",
    "@types/sharp": "^0.22.2",
    "form-data": "^2.3.3",
    "husky": "^2.3.0",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.0",
    "serverless": "^3.36.0",
    "serverless-api-stage": "^1.4.0",
    "serverless-plugin-typescript": "^2.1.5",
    "shx": "^0.3.2",
    "ts-node": "^8.3.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "clean": "shx rm -Rf build node_modules",
    "dev": "cross-env NODE_ENV=development nodemon -r ts-node/register src/index.ts",
    "start": "cross-env NODE_ENV=production node ./build/index.js",
    "build": "tsc -p .",
    "format": "prettier \"src/**/*.{js,ts,tsx}\" --write",
    "test": "mocha",
    "lint": "exit 0",
    "deploy": "serverless deploy",
    "serverless": "serverless"
  },
  "prettier": {
    "semi": false,
    "printWidth": 100,
    "parser": "typescript",
    "singleQuote": true,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern \"**/*.*(js|jsx|ts|tsx)\"",
      "pre-push": "npm run lint && npm run build && npm run test"
    }
  }
}
